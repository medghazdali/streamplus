{% extends 'base.html.twig' %}

{% block title %}{{ 'success.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">{{ 'success.title'|trans }}</h2>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="h4 mb-4">{{ 'success.message'|trans }}</h3>
                        
                        <div class="mb-4">
                            <h4 class="h5">{{ 'success.next_steps'|trans }}</h4>
                            <p class="mb-3">{{ 'success.check_email'|trans }}</p>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 